<Window x:Class="ADO1.DepartmentCrudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO1"
        mc:Ignorable="d"
        Title="DepartmentCrudWindow" Height="210" Width="400"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="WindowName"
            TextAlignment="Center"
            FontSize="20"
            Margin="5"
            Text="EDIT DEPARTMENTS"
            FontWeight="Bold"/>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <!--ID-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="Id:"
                    FontSize="15"
                    FontWeight="DemiBold"
                    TextAlignment="Left"
                    Margin="5"
                    Grid.Column="0"/>
                <TextBox
                    x:Name="IdView"
                    IsEnabled="false"
                    FontSize="15"
                    FontWeight="DemiBold"
                    Margin="5"
                    Grid.Column="1"/>
            </Grid>
            <!--NAME-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Text="Name:"
                    FontSize="15"
                    FontWeight="DemiBold"
                    TextAlignment="Left"
                    Margin="5"/>
                <TextBox
                    x:Name="NameView"
                    FontSize="15"
                    FontWeight="DemiBold"
                    Margin="5"
                    Grid.Column="1"/>
            </Grid>
            <!--ErrorMessage-->
            <TextBlock
                x:Name="ErrorText"
                Visibility="Hidden"
                TextAlignment="Left"
                FontSize="13"
                Margin="5"
                Foreground="DarkRed"
                Text="*Test Error"
                FontWeight="DemiBold"/>
            <!--BUTTONS-->
            <Grid Margin="5" x:Name="CrudButtons">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="SaveButton"
                    Content="Save"
                        MouseEnter="SaveButton_MouseEnter"
                        MouseLeave="SaveButton_MouseLeave"
                        FontSize="15"
                        Grid.Column="0"
                        Margin="5"
                        Click="SaveButton_Click"/>

                <Button Content="Delete"
                        x:Name="DeleteButton"
                        FontSize="15"
                        Grid.Column="1"
                        Margin="5"
                        Click="DeleteButton_Click"/>

                <Button Content="Cancel"
                        x:Name="CancelButton"
                        FontSize="15"
                        Grid.Column="2"
                        Margin="5"
                        Click="CancelButton_Click"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
