<Window x:Class="ADO1.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ADO1"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="ADO.NET"
                   FontSize="24"
                   TextAlignment="Center"
                   FontWeight="DemiBold"/>
        <Button x:Name="BasicsButton" Content="1. Основи технології"
                Margin="20 10"
                Padding="20 5"
                Click="BasicsButton_Click"/>
        <Button x:Name="OrmButton" Content="2. ORM"
                Margin="20 10"
                Padding="20 5"
                Click="OrmButton_Click"/>
        <Button x:Name="DalButton" Content="3. DAL, Data Context"
                Margin="20 10"
                Padding="20 5"
                Click="DalButton_Click"/>
        <Button x:Name="EFButton" Content="4. Entity Framework Core"
                Margin="20 10"
                Padding="20 5"
                Click="EFButton_Click"/>
    </StackPanel>
</Window>
